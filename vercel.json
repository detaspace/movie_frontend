{
  "version": 2,
  "public": true,
  "routes": [
    // 1. **हटा दिया गया:** Android और iOS फ़ाइलों के लिए कस्टम हेडर राउटिंग
    
    // 2. डीप लिंक हैंडलर: feradox.com/s/ को index.html पर रूट करें
    {
      "src": "/s/(.*)",
      "dest": "/index.html"
    },
    
    // 3. कस्टम/यूजर लिंक्स: /:username/:id को index.html पर रूट करें
    {
      "src": "/:username/:id",
      "dest": "/index.html"
    },
    
    // 4. Fallback (सभी को index.html पर भेजें)
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ]
}

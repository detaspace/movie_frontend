{
  "version": 2,
  "public": true,
  "routes": [
    // 1. Android App Links के लिए सही Content-Type: application/json सुनिश्चित करता है।
    {
      "src": "/\\.well-known/assetlinks\\.json",
      "dest": "/.well-known/assetlinks.json",
      "headers": {
        "Content-Type": "application/json",
        "Cache-Control": "public, max-age=3600"
      }
    },
    
    // 2. iOS Universal Links के लिए सही Content-Type: application/json सुनिश्चित करता है।
    {
      "src": "/\\.well-known/apple-app-site-association",
      "dest": "/.well-known/apple-app-site-association",
      "headers": {
        "Content-Type": "application/json",
        "Cache-Control": "public, max-age=3600"
      }
    },
    
    // 3. डीप लिंक हैंडलर: feradox.com/s/ (यह सुनिश्चित करता है कि लिंक index.html पर जाएँ)
    {
      "src": "/s/(.*)",
      "dest": "/index.html"
    },
    
    // 4. कस्टम/यूजर लिंक्स: /:username/:id
    {
      "src": "/:username/:id",
      "dest": "/index.html"
    },
    
    // 5. स्टैटिक पेज लिंक्स
    {
      "src": "/terms",
      "dest": "/index.html"
    },
    {
      "src": "/privacy",
      "dest": "/index.html"
    },
    {
      "src": "/deleteData",
      "dest": "/index.html"
    },
    {
      "src": "/deleteAccount",
      "dest": "/index.html"
    },
    
    // 6. APK डाउनलोड MIME टाइप
    {
      "src": "/app-release\\.apk",
      "dest": "/app-release.apk",
      "headers": {
        "Content-Type": "application/vnd.android.package-archive"
      }
    },
    
    // 7. डिफ़ॉल्ट/Fallback रूट
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ]
}
